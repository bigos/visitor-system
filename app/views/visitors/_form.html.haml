= simple_form_for @visitor do |f|
  - if @visitor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visitor.errors.count, "error")} prohibited this visitor from being saved:"
      %ul
        - @visitor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.input :name
  .field
    = f.label :arrived_at
    = f.input :arrived_at
  .field
    = f.label :host_id
    = f.input :host_id
  .field
    = f.label :host_name
    = f.input :host_name
  .field
    = f.label :visit_purpose
    = f.input :visit_purpose
  .actions
    = f.button :submit

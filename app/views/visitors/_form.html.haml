= simple_form_for @visitor do |f|
  - if @visitor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visitor.errors.count, "error")} prohibited this visitor from being saved:"
      %ul
        - @visitor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
  .field
    = f.input :arrived_at, as: :string, input_html: { class: 'datetime_picker' }
  .field
    = f.input :host_id
  .field
    = f.input :host_name
  .field
    = f.input :visit_purpose
  .actions
    %button{type: :submit, class: 'button success'}
      %i{class: 'fa fa-bug'}
        Save
